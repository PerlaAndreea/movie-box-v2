<div class="col-md-6 col-md-offset-3">

	<div class="edit-review-form">

		<h1>Edit Review</h1>

		<%= simple_form_for([@movie, @review]) do |f| %>
		<%= render 'shared/error_messages' %>
			<%= f.input :rating %>
			<%= f.input :comment %>
			<%= f.button :submit, :class => "btn-custom" %>
		<% end %>	

	</div>

</div>
